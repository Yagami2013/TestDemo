<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:paddingLeft="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_record_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:foregroundGravity="center"
        android:paddingLeft="8dp"
        android:background="@drawable/shape_radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_record_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:text="呵呵"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/img_record_icon"
        app:layout_constraintLeft_toRightOf="@id/img_record_icon" />

    <TextView
        android:id="@+id/btn_list_recorder"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:gravity="fill_horizontal"
        android:text="..."
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_record_name"
        app:layout_constraintBaseline_toBaselineOf="@id/txt_record_name"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>